{
  "name": "ZiiChat",
  "version": "0.1.0",
  "description": "Zii webchat platform",
  "main": "index.js",
  "repository": "https://github.com/mikbry/ZiiChat.git",
  "author": "mik@mikbry.com",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "compile": "yarn workspaces run compile",
    "lint": "yarn workspaces run lint",
    "test": "yarn workspaces run test",
    "coverage": "yarn workspaces run coverage",
    "report-coverage": "yarn workspaces run report-coverage",
    "prepublishOnly": "yarn workspaces run compile",
    "release": "cross-env HUSKY_BYPASS=true lerna publish --contents dist"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.4",
    "@commitlint/config-conventional": "^8.3.4",
    "cross-env": "^6.0.3",
    "husky": "^4.0.6",
    "lerna": "^3.20.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "commit-msg": "[[ -n $HUSKY_BYPASS ]] || commitlint -E HUSKY_GIT_PARAMS"
    },
    "commitlint": {
      "extends": [
        "@commitlint/config-conventional"
      ]
    }
  }
}
