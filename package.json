{
  "name": "ziichat",
  "version": "0.0.0",
  "description": "Zii webchat opensource platform",
  "main": "index.js",
  "repository": "https://github.com/mikbry/ZiiChat.git",
  "author": "mik@mikbry.com",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "yarn workspace @ziichat/webchat start",
    "build": "yarn workspaces build",
    "test": "yarn workspaces test",
    "lint": "yarn workspace @ziichat/components lint",
    "storybook": "yarn workspace @ziichat/components storybook",
    "bootstrap": "lerna bootstrap --use-workspaces"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "cross-env": "^7.0.2",
    "husky": "^4.2.5",
    "lerna": "^3.20.2",
    "rimraf": "^3.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "commit-msg": "[[ -n $HUSKY_BYPASS ]] || commitlint -E HUSKY_GIT_PARAMS"
    },
    "commitlint": {
      "extends": [
        "@commitlint/config-conventional"
      ]
    }
  }
}
