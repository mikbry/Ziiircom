{
  "name": "@ziiircom/messenger",
  "version": "0.0.0",
  "main": "index.js",
  "author": "Mik BRY",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist && mkdir dist",
    "init-config": "../../scripts/create.config.js ./src/config.json",
    "start": "cross-env NODE_ENV=development PACKAGE_DIR=messenger webpack-dev-server --progress --colors --config ../../scripts/webpack.dev.js",
    "build": "yarn clean && yarn init-config && cross-env PACKAGE_DIR=messenger BABEL_ENV=production webpack --progress --colors --config ../../scripts/webpack.prod.js",
    "test": "cross-env NODE_ENV=test jest",
    "lint": "$(yarn bin)/eslint src --ext=js",
    "coverage": "cross-env NODE_ENV=test  jest --coverage --colors"
  },
  "dependencies": {
    "@ziiircom/common": "0.0.0",
    "@ziiircom/components": "0.0.0"
  },
  "peerDependencies": {
    "@ziiircom/dialog": "0.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@testing-library/dom": "^7.9.0",
    "@testing-library/jest-dom": "^5.9.0",
    "@ziiircom/dialog": "0.0.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.3.0",
    "babel-loader": "^8.1.0",
    "copy-webpack-plugin": "^5.1.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-loader": "^4.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-prettier": "^3.1.3",
    "html-replace-webpack-plugin": "^2.5.6",
    "html-webpack-plugin": "^4.2.0",
    "jest": "^26.0.1",
    "packito": "^0.5.0",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "webpack-merge": "^4.2.2"
  },
  "jest": {
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover",
      "html"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js",
      "!<rootDir>/node_modules/",
      "!<rootDir>/config/"
    ],
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ]
  }
}
